# =============================================================================
# Ladybug TV - Environment Configuration
# =============================================================================

# Application
APP_NAME=ladybug_tv
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# Reflex Configuration
REFLEX_BACKEND_URL=http://localhost:8000
REFLEX_FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=sqlite:///./reflex.db
# For PostgreSQL in production:
# DATABASE_URL=postgresql://user:password@localhost:5432/ladybug_tv

# Backend API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Authentication
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Stream Relay
STREAM_RELAY_HOST=0.0.0.0
STREAM_RELAY_PORT=8080
STREAM_BUFFER_SIZE=4096
HLS_SEGMENT_DURATION=6
HLS_PLAYLIST_SIZE=5

# FFmpeg
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
TRANSCODE_PRESET=veryfast
TRANSCODE_CRF=23

# EPG Service
EPG_UPDATE_INTERVAL=3600
EPG_SOURCE_URL=https://example.com/epg.xml
EPG_CACHE_TTL=7200

# Stream Monitor (Go Service)
MONITOR_HOST=0.0.0.0
MONITOR_PORT=9090
MONITOR_CHECK_INTERVAL=30
MONITOR_TIMEOUT=10
MONITOR_RETRY_ATTEMPTS=3

# Metrics & Monitoring
METRICS_ENABLED=true
METRICS_PORT=9091
PROMETHEUS_ENDPOINT=/metrics

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/ladybug_tv.log

# Redis (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# Docker
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE_TAG=latest

# External Services
TMDB_API_KEY=
TVMAZE_API_KEY=

